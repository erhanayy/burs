    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <div id="alerts_area"> </div>
        <form class="login-form" action="" method="post" id="frm">
            <h3 class="form-title">Declaration zımbırtısı</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> HATA METNİ </span>
            </div>
